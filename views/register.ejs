<%- include('partials/header') %>

<div class="container mt-5">
  <div class="row">    
        <div class="card-body-login-1">
          <span class="heading-login">Register</span>
          <br>
          <span class="no-account">Don't have an account? <a href="/login"> <b> Sign in</b> </a> </span>
          <!-- Makes POST request to /register route -->
          <form action="/register" method="POST">
              <input type="email" class="form-control" name="username" placeholder="Enter your email" required>
              <input type="password" class="form-control" name="password" placeholder="Password" required>
            <button type="submit" class="btn btn-dark">Register</button>
          </form>
        <p id="alt-login">or signup using</p>
        <div class="btn-google">
          <a class="btn-google-btn" href="/auth/google" role="button">
            <i class="fab fa-google"></i>
            Google
          </a>
        </div>
        </div>
        <div class="logo">
        <i class="fa-solid fa-key fa-10x fa-dark"></i>
        <div class="logo-text">
          <h2 class="second-heading">
            Register to know the secrets of anonymous users!
          </h2>
        </div>
      </div>
  </div>
</div>

