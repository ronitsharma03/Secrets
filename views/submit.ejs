<%- include('partials/header') %>
  <div class="nav">
    <nav>
      <h2 class="heading-nav">Secrets&nbsp; Sanctum</h2>
      <a class="nav-items" href="/secrets" <li>Home</li></a>
      <a class="nav-items" href="#" <li>My secrets</li></a>
      <a class="nav-items" href="#contact" <li>Contact</li></a>
      <div class="account-info float-right">
        <a href="#"><i class="fa-solid fa-user"></i></a>

        <%if(localUser){%>
          <p class="username">
            <%=localUser%>
          </p>
          <% }else if(googleUser){%>
            <p class="username">
              <%=googleUser%>
            </p>
            <%}%>
              <a class="btn-logout" href="/logout" role="button">Log Out</a>
      </div>
    </nav>
  </div>

  <div class="container-secrets">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">Don't keep your secrets, share them anonymously with others!</h1>
    <p class="secret-text-display">What Secret you wanna share today</p>

    <form action="/submit" method="POST">

      <div class="form-group">
        <input type="text" class="form-control-1" name="secret" placeholder="What's your secret?" required>
      </div>
      <button type="submit" class="btn-secret">Submit</button>
    </form>
  </div>
  <%- include('partials/footer') %>